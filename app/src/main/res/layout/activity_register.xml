<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/basic"
        tools:context=".ui.register.Register">


    <TextView
            android:layout_above="@id/regForm"
            android:text="REGISTER"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:id="@+id/regForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginVertical="6dp"
                android:layout_height="wrap_content">


            <EditText
                    android:background="@drawable/auth_edit_text_bg"
                    android:padding="12dp"
                    android:id="@+id/reg_first_name"
                    android:hint="First Name"
                    android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                    android:drawablePadding="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <EditText
                    android:background="@drawable/auth_edit_text_bg"
                    android:padding="12dp"
                    android:layout_marginStart="8dp"
                    android:id="@+id/reg_last_name"
                    android:hint="Last Name"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <EditText
                android:background="@drawable/auth_edit_text_bg"
                android:padding="12dp"
                android:hint="Email"
                android:id="@+id/reg_email"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                android:drawablePadding="8dp"
                android:layout_width="match_parent"
                android:layout_marginVertical="6dp"
                android:layout_height="wrap_content"/>

        <EditText
                android:background="@drawable/auth_edit_text_bg"
                android:padding="12dp"
                android:hint="Password"
                android:id="@+id/reg_password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="8dp"
                android:layout_width="match_parent"
                android:layout_marginVertical="6dp"
                android:layout_height="wrap_content"/>

        <EditText
                android:background="@drawable/auth_edit_text_bg"
                android:padding="12dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:id="@+id/reg_confirm_password"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="8dp"
                android:layout_width="match_parent"
                android:layout_marginVertical="6dp"
                android:layout_height="wrap_content"/>


        <TextView
                android:text="@string/agreement"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:layout_marginVertical="6dp"
                android:layout_height="wrap_content"/>

        <Button
                android:padding="12dp"
                android:layout_width="match_parent"
                android:background="@drawable/auth_button_bg"
                android:text="Sign Up"
                android:id="@+id/reg_btn_register"
                android:layout_marginVertical="6dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account yet ?"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/tvDoSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Sign In"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>